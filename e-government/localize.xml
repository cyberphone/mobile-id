<project name="Make a localized version of the source" default="help" basedir=".">

  <!-- set properties for this build -->

  <target name="help">
      <echo message="help localize -Dlocale=fr"/>
  </target>

  <target name="localize">
     <delete dir="..\e-government.fr"/>
     <copy todir="..\e-government.fr" preservelastmodified="true">
       <fileset dir=".">
          <exclude name="localize.xml"/>
       </fileset>
   	  </copy>
	</target>
   
</project>
