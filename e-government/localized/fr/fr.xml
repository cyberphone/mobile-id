<project name="Make a French version of the source" default="help" basedir=".">

  <!-- set properties for this build -->

  <target name="help">
      <echo message="help localize"/>
  </target>
      	
  <target name="updateLocalizedStrings">
    <echo message="${variable} ${string} ${app.dir}"/>
  	<replaceregexp file="${app.dir}/src/org/webpki/mobileid/egovernment/LocalizedStrings.java"
        match="(${variable}[\ ]+\=[\ ]+\&quot;)(.*)(\&quot;\;)"
        replace="\1${string}\3"/>
    </target>

  <target name="localize">
    <antcall target="updateLocalizedStrings">
       <param name="variable" value="LS_CONFIRMATION"/>
       <param name="string" value="Un message de confirmation a été envoyé à"/>
    </antcall>
    <antcall target="updateLocalizedStrings">
       <param name="variable" value="LS_HT_LOGOUT"/>
       <param name="string" value="Se déconnecter"/>
    </antcall>
    <antcall target="updateLocalizedStrings">
       <param name="variable" value="LS_DECLARATION_RECEIVED"/>
       <param name="string" value="La déclaration a été reçue"/>
    </antcall>
    <antcall target="updateLocalizedStrings">
       <param name="variable" value="LS_TIME_STAMP"/>
       <param name="string" value="Horodatage"/>
    </antcall>  
    <antcall target="updateLocalizedStrings">
       <param name="variable" value="LS_REFERENCE_ID"/>
       <param name="string" value="Référence ID"/>
    </antcall>  
  </target>
   
</project>
